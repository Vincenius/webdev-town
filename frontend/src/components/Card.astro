---
interface Props {
	title: string;
	body: string;
	href: string;
	image: string;
	sponsored: boolean;
	id: string;
	internal: boolean;
}
import { Image } from 'astro:assets';
const images = import.meta.glob('../assets/**/*')

const { href, title, body, image, sponsored, internal = false } = Astro.props;
let domain = internal ? href : (new URL(href))
let imagePath = image.replace('/weekly', '../assets');
const myImage = images[imagePath]
	? await images[imagePath]()
	: { default: 'no-image' };
---

<li class="link-card">
	<a href={href} target={internal ? '' : "_blank"} rel={internal ? '' : 'noopener noreferrer'} draggable="false">
		<Image
			src={myImage.default}
			alt={title}
			width={300}
			height={166}
			class="image"
		/>
		<div class="content">
			<div>
				{sponsored && <span class="sponsored">Sponsored</span>}
				<h3>
					{title}
					<span>&rarr;</span>
				</h3>
				<p>
					{body}
				</p>
			</div>
			{ !internal && <p class="host">
				{domain.hostname}
			</p> }
		</div>
	</a>
</li>
