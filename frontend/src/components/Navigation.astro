---
import { Image } from 'astro:assets';
import logo from '../assets/logo.svg';
---
<nav>
  <a class="logo-container" href="/">
    <Image class="logo" src={logo} width={40} alt="circuit board house logo"/>
    <h1>WebDev Town</h1>
  </a>
  <input class="menu-btn" type="checkbox" id="menu-btn" />
  <label class="menu-icon" for="menu-btn"><span class="navicon"></span></label>
  <div class="menu">
    <a href="/collections">Collections</a>
    <a href="/explore">Explore</a>
    <a href="/submit" class="submit">Submit Resource</a>
  </div>
</nav>
<style>
  nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2em;
    position: relative;
  }
  .logo-container {
    display: flex;
    align-items: center;
    color: #fff;
    text-decoration: none;
  }
  .logo-container:hover {
    opacity: 1;
  }
  .logo {
    margin-right: 1em;
  }
  h1 {
    font-size: 1em;
    margin: 0;
  }
  .menu a {
    text-decoration: none;
    margin: 0 1em;
    font-size: 0.7em;
    color: #fff;
  }
  .menu a:last-child {
    margin-right: 0;
  }

  a.submit {
    padding: .5em;
    border: 1px solid var(--accent-light);
    border-radius: .5em;
    color: var(--accent-light);
  }


/* menu icon */

.menu-icon {
  cursor: pointer;
  display: inline-block;
  float: right;
  padding: .5em;
  position: relative;
  user-select: none;
  display: none;
}

.menu-icon .navicon {
  background: #fff;
  display: block;
  height: 2px;
  position: relative;
  transition: background .2s ease-out;
  width: 18px;
}

.menu-icon .navicon:before,
.menu-icon .navicon:after {
  background: #fff;
  content: '';
  display: block;
  height: 100%;
  position: absolute;
  transition: all .2s ease-out;
  width: 100%;
}

.menu-icon .navicon:before {
  top: 5px;
}

.menu-icon .navicon:after {
  top: -5px;
}

/* menu btn */

.menu-btn {
  display: none;
}

.menu-btn:checked ~ .menu {
  max-height: 240px;
}

.menu-btn:checked ~ .menu-icon .navicon {
  background: transparent;
}

.menu-btn:checked ~ .menu-icon .navicon:before {
  transform: rotate(-45deg);
}

.menu-btn:checked ~ .menu-icon .navicon:after {
  transform: rotate(45deg);
}

.menu-btn:checked ~ .menu-icon:not(.steps) .navicon:before,
.menu-btn:checked ~ .menu-icon:not(.steps) .navicon:after {
  top: 0;
}

@media (max-width: 600px) {
  .menu {
    max-height: 0;
    overflow: hidden;
    position: absolute;
    right: 0;
    top: 2em;
    background: #444;
    border-radius: .5em;
  }
  .menu a, .menu a:last-child {
    display: block;
    text-align: right;
    margin: 1em;
  }
  .menu-icon {
    display: block;
  }
}
</style>